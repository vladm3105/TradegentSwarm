# MCP Trading RAG - Environment Configuration
# Copy to .env and fill in your values

# PostgreSQL Connection
DATABASE_URL=postgresql://lightrag:lightrag@localhost:5433/lightrag
RAG_SCHEMA=nexus

# LLM/Embedding Configuration (unified)
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=
EMBED_MODEL=nomic-embed-text
EMBED_DIMENSIONS=768

# LLM Generation Settings (for RAG answer generation)
LLM_MODEL=llama3.2
LLM_TEMPERATURE=0.1
LLM_NUM_PREDICT=200
LLM_MAX_TOKENS=200
LLM_TOP_P=0.9
LLM_TOP_K=40

# Chunking
CHUNK_MAX_TOKENS=1500
CHUNK_MIN_TOKENS=50

# Logging
LOG_LEVEL=INFO
