# MCP Trading Graph - Environment Configuration
# Copy to .env and fill in your values

# Neo4j Connection
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASS=
NEO4J_DATABASE=neo4j

# LLM Configuration (unified)
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=
LLM_MODEL=qwen3:8b

# LLM Generation Settings
LLM_TEMPERATURE=0.1
LLM_NUM_PREDICT=2000
LLM_MAX_TOKENS=2000
LLM_TOP_P=0.9
LLM_TOP_K=40

# Extraction Settings
EXTRACT_TIMEOUT_SECONDS=30
EXTRACT_COMMIT_THRESHOLD=0.7
EXTRACT_FLAG_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO
