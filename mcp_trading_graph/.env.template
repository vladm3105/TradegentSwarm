# MCP Trading Graph - Environment Configuration
# Copy to .env and fill in your values

# Neo4j Connection
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASS=
NEO4J_DATABASE=neo4j

# Extraction Settings
EXTRACT_DEFAULT_EXTRACTOR=ollama
EXTRACT_TIMEOUT_SECONDS=30
EXTRACT_COMMIT_THRESHOLD=0.7
EXTRACT_FLAG_THRESHOLD=0.5

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EXTRACT_MODEL=qwen3:8b

# OpenRouter (cloud fallback)
OPENROUTER_API_KEY=
OPENROUTER_EXTRACT_MODEL=anthropic/claude-3-5-sonnet

# Anthropic Claude API (optional)
ANTHROPIC_API_KEY=

# Logging
LOG_LEVEL=INFO
