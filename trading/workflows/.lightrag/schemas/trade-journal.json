{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "trade-journal.json",
  "title": "Trade Journal",
  "description": "Trade execution record and post-trade review schema",
  "type": "object",
  "required": ["_meta", "ticker", "catalyst", "thesis", "execution"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["id", "type", "version", "created", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^TRD-[0-9]{4}-[0-9]{3}$",
          "description": "Unique identifier: TRD-{YYYY}-{NNN}"
        },
        "type": {
          "type": "string",
          "const": "trade-journal"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["open", "closed", "cancelled"]
        }
      }
    },
    "ticker": {
      "type": "string",
      "pattern": "^[A-Z]{1,5}$"
    },
    "catalyst": {
      "type": "string",
      "enum": ["earnings", "technical", "news", "sector", "macro", "other"]
    },
    "thesis": {
      "type": "object",
      "required": ["summary", "confidence"],
      "properties": {
        "summary": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "edge": { "type": "string" },
        "invalidation": { "type": "array", "items": { "type": "string" } }
      }
    },
    "execution": {
      "type": "object",
      "required": ["direction", "entries"],
      "properties": {
        "direction": {
          "type": "string",
          "enum": ["long", "short"]
        },
        "structure": {
          "type": "string",
          "description": "shares, calls, puts, spread type, etc."
        },
        "entries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["date", "action", "qty", "price"],
            "properties": {
              "date": { "type": "string", "format": "date" },
              "action": { "type": "string", "enum": ["buy", "sell", "sell_to_open", "buy_to_close"] },
              "qty": { "type": "number" },
              "price": { "type": "number" },
              "notes": { "type": "string" }
            }
          }
        },
        "exits": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["date", "action", "qty", "price"],
            "properties": {
              "date": { "type": "string", "format": "date" },
              "action": { "type": "string" },
              "qty": { "type": "number" },
              "price": { "type": "number" },
              "reason": { "type": "string" },
              "notes": { "type": "string" }
            }
          }
        }
      }
    },
    "results": {
      "type": ["object", "null"],
      "description": "Filled when trade is closed",
      "properties": {
        "gross_pnl": { "type": "number" },
        "net_pnl": { "type": "number" },
        "return_pct": { "type": "number" },
        "holding_days": { "type": "integer" },
        "outcome": { "type": "string", "enum": ["win", "loss", "breakeven"] }
      }
    },
    "review": {
      "type": ["object", "null"],
      "description": "Post-trade review - required when status=closed",
      "properties": {
        "thesis_correct": { "type": "boolean" },
        "entry_timing": { "type": "string", "enum": ["optimal", "good", "poor"] },
        "exit_timing": { "type": "string", "enum": ["optimal", "good", "early", "late"] },
        "what_worked": { "type": "array", "items": { "type": "string" } },
        "what_failed": { "type": "array", "items": { "type": "string" } },
        "biases_detected": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "bias": { "type": "string" },
              "impact": { "type": "string" },
              "cost_estimate": { "type": "number" }
            }
          }
        },
        "lessons": { "type": "array", "items": { "type": "string" } },
        "framework_updates": { "type": "array", "items": { "type": "string" } }
      }
    },
    "_graph": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "string" }
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": { "type": "string" }
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "analysis": { "type": "string" },
        "strategy": { "type": "string" },
        "ticker": { "type": "string" },
        "learnings": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
