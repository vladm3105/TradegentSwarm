{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "research.json",
  "title": "Market Research",
  "description": "Thematic market research and sector analysis schema",
  "type": "object",
  "required": ["_meta", "topic", "category", "summary", "data_points", "implications"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["id", "type", "version", "created", "valid_until"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^MKT-[0-9]{4}-[0-9]{3}$",
          "description": "Unique identifier: MKT-{YYYY}-{NNN}"
        },
        "type": {
          "type": "string",
          "const": "research"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "valid_until": {
          "type": "string",
          "format": "date",
          "description": "Research expires after this date (typically 90 days)"
        }
      }
    },
    "topic": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": ["thematic", "sector", "macro", "earnings", "policy", "other"]
    },
    "summary": {
      "type": "object",
      "required": ["key_finding", "signal"],
      "properties": {
        "key_finding": { "type": "string" },
        "signal": {
          "type": "string",
          "enum": ["very_bullish", "bullish", "neutral", "bearish", "very_bearish"]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "tickers_affected": {
      "type": "object",
      "properties": {
        "bullish": { "type": "array", "items": { "type": "string" } },
        "bearish": { "type": "array", "items": { "type": "string" } },
        "neutral": { "type": "array", "items": { "type": "string" } }
      }
    },
    "data_points": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source", "data"],
        "properties": {
          "source": { "type": "string" },
          "source_type": { 
            "type": "string", 
            "enum": ["earnings_call", "analyst_report", "news", "data", "government", "other"] 
          },
          "date": { "type": "string", "format": "date" },
          "data": { "type": "string" },
          "quote": { "type": "string" },
          "implication": { "type": "string" }
        }
      }
    },
    "implications": {
      "type": "object",
      "required": ["trading"],
      "properties": {
        "trading": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ticker": { "type": "string" },
              "strategy": { "type": "string" },
              "timing": { "type": "string" },
              "confidence": { "type": "string" }
            }
          }
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "risk": { "type": "string" },
              "probability": { "type": "string" },
              "impact": { "type": "string" },
              "mitigation": { "type": "string" }
            }
          }
        }
      }
    },
    "refresh_triggers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Events that should trigger research update"
    },
    "_graph": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "related_research": { "type": "array", "items": { "type": "string" } },
        "tickers": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
