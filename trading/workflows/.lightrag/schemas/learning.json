{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "learning.json",
  "title": "Meta-Learning",
  "description": "Bias patterns, insights, and framework improvement schema",
  "type": "object",
  "required": ["_meta", "category", "pattern", "evidence", "countermeasure"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["id", "type", "version", "created", "confidence"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^LRN-[a-z0-9-]+$",
          "description": "Unique identifier: LRN-{topic-slug}"
        },
        "type": {
          "type": "string",
          "const": "learning"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence based on evidence strength"
        },
        "validated": {
          "type": "boolean",
          "description": "Whether countermeasure has been tested"
        }
      }
    },
    "category": {
      "type": "string",
      "enum": ["bias", "signal", "timing", "sizing", "exit", "framework", "other"]
    },
    "subcategory": {
      "type": "string",
      "description": "E.g., for bias: recency, confirmation, loss-aversion, etc."
    },
    "pattern": {
      "type": "object",
      "required": ["description", "behavior"],
      "properties": {
        "description": { "type": "string" },
        "behavior": { "type": "string" },
        "trigger_conditions": { "type": "array", "items": { "type": "string" } },
        "frequency": { "type": "string", "enum": ["rare", "occasional", "frequent", "systematic"] }
      }
    },
    "evidence": {
      "type": "object",
      "required": ["source_trades"],
      "properties": {
        "source_trades": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "occurrences": { "type": "integer" },
        "estimated_cost": { "type": "number" },
        "observations": { "type": "array", "items": { "type": "string" } }
      }
    },
    "root_cause": {
      "type": "object",
      "properties": {
        "psychological_driver": { "type": "string" },
        "flawed_logic": { "type": "string" },
        "contributing_factors": { "type": "array", "items": { "type": "string" } }
      }
    },
    "countermeasure": {
      "type": "object",
      "required": ["rule"],
      "properties": {
        "rule": { "type": "string" },
        "implementation": { "type": "array", "items": { "type": "string" } },
        "checklist_addition": { "type": "string" },
        "mantra": { "type": "string" }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "status": { "type": "string", "enum": ["pending", "in_progress", "validated", "failed"] },
        "criteria": { "type": "array", "items": { "type": "string" } },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "trade": { "type": "string" },
              "rule_followed": { "type": "boolean" },
              "outcome": { "type": "string" }
            }
          }
        }
      }
    },
    "_graph": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "strategies_affected": { "type": "array", "items": { "type": "string" } },
        "related_learnings": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
